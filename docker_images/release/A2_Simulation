FROM jmckenna/alphadocker:geant4_vmc
WORKDIR /alphasoft
COPY . /alphasoft
RUN pwd \
&& ls * \
&& source /alphasoft/agconfig.sh \
&& mkdir /build \
&& cd /build \
&& cmake3 -DBUILD_A2=ON -DBUILD_A2_SIM=ON /alphasoft \
&& cat GitInfo.h \
&& make -j4 \
&& make install
CMD echo "$AGRELEASE"
#RUN ["root","-l"]