    "version": "0.2.0",
    "configurations": [

        {
            "name": "alphaAnalysis",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/alpha2/alphaAnalysis.exe",
            "args": ["${workspaceFolder}/runs/run39993sub00000.mid.gz", "--mt", "--", "--summarize", "Mixing"],
            //"args": ["${workspaceFolder}/runs/run58453sub00000.mid.gz"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": { "trace": true, "traceResponse": true },
        },

        {
            "name": "alphagonline - remote",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/alphagonline.exe",
            "args": ["-Eagdaq", "-Halphagdaq.cern.ch"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": { "trace": true, "traceResponse": true },
        },

        {
            "name": "macro_main_LyAlpha_demo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/macro_main_LyAlpha_demo.exe",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": { "trace": true, "traceResponse": true },
        }
    ]
}
